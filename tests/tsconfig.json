{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./tests/src",
      "incremental": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "paths": {
        "@/*" :["tests/src/*"]
      },
      "types": [
        "knex/types"
      ],
    }
  }
