{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "target": "es6",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "skipLibCheck": true,
      "paths": {
        "@/*": ["src/*"]
      },
      "types": [
        "@types/node",
        "knex/types"
      ]
    },
    "include": [
      "src/**/*",
      "examples/**/*",
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }