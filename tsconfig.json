{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "noLib": false,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "target": "es6",
      "resolveJsonModule": true,
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "skipLibCheck": true,
      "types": [
        "@types/node",
        "knex/types"
      ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "tests"]
  }